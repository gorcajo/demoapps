    "version": "0.2.0",
    "configurations": [
        {
            "name": "Random",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceRoot}/random",
            "env": {
                "FLASK_APP": "main",
                "FLASK_ENV": "development"
            },
            "args": ["run", "--port=8080"]
        },
        {
            "name": "Visits",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceRoot}/visits",
            "env": {
                "FLASK_APP": "main",
                "FLASK_ENV": "development"
            },
            "args": ["run", "--port=8080"]
        },
        {
            "name": "Telemetry",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceRoot}/telemetry",
            "env": {
                "FLASK_APP": "main",
                "FLASK_ENV": "development",
                "REDIS_HOST": "localhost",
                "REDIS_PORT": "6379"
            },
            "args": ["run", "--port=8080"]
        }
    ]
}
